<div class="comments">
    {{!-- {{using "this" targets the comments array and thus looks for properties 
    of "this" which in this case is the comments array and iterates over each comment}} --}}
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>